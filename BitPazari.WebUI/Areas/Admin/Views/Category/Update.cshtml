
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}
@model Category

@using (Html.BeginForm("Update", "Category", FormMethod.Post))
{
    <fieldset>
        <legend>Kategori</legend>
        <div class="form-group" >
            <label>Kategori Id</label>
            @Html.TextBoxFor(x => x.Id, new { @class = "form-control", disabled=""})
        </div>
        <div class="form-group">
            <label>Kategori Adı</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control is-invalid" })
        </div>
        <div class="form-group">
            <label>Kategori Açıklaması</label>
            @Html.TextBoxFor(x => x.Description, new { @class = "form-control is-invalid" })
        </div>
        <input type="submit" name="name" value="Kaydet" class="btn btn-success" />
    </fieldset>

}

