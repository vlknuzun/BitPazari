@model IEnumerable<BitPazari.Model.Entities.SubCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/AdminLayout.cshtml";
}



<p>
    @Html.ActionLink("Create", "Add","SubCategory",null,new {@class="btn btn-primary" })
</p>
@if (ViewBag.Error != null)
{
    <div id="dvError" class="alert alert-danger">
        <span> @ViewBag.Error</span>
    </div>
}
else if (ViewBag.Information!=null)
{
    <div id="dvInformation" class="alert alert-warning" >
        <span> @ViewBag.Information</span>
    </div>
}
else
{
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
          
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedComputerName)
            </th>
           
         
            <th>

            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
              
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedComputerName)
                </td>
                
               
                <td>
                    <a href='@Url.Action("Update",new { id=item.Id})' title="Update"><i class='glyphicon glyphicon-edit'></i></a>
                    <a href='@Url.Action("Details",new { id=item.Id})' title="Detay"><i class='glyphicon glyphicon-glass'></i></a>
                    <a href='@Url.Action("Delete",new { id=item.Id})' title="Delete"><i class='glyphicon glyphicon-floppy-remove'></i></a>
                  
                </td>
            </tr>
        }

    </table>
}

@section scripts{
    <script>

        $(document).ready(function () {

            var error = $("#dvError");
            var information = $("#dvInformation");
            if (error.width()>0) {
                ErrorClear();
            }
            else if (information.width()>0) {
                InformationClear();
            }
        })
        function ErrorClear() {
                var zamanlayici = setTimeout(function () {
                    $("#dvError").fadeOut("slow");
                    clearTimeout(zamanlayici)
                }, 5000);
            
        }
        function InformationClear() {
            var zamanlayici = setTimeout(function () {
                $("#dvInformation").fadeOut("slow");
                clearTimeout(zamanlayici)
            }, 5000);
        }
    </script>
    
    
    
    }