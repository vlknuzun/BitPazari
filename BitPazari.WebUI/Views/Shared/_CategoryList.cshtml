@model IEnumerable<BitPazari.Model.Entities.Category>
<div class="side-menu animate-dropdown outer-bottom-xs" >
    <div class="head"><i class="icon fa fa-align-justify fa-fw"></i> Categories</div>
    <nav class="yamm megamenu-horizontal">
        <ul class="nav">
            @foreach (var item in Model)
            {
                <li class="dropdown menu-item">
                    <a href="#" data-toggle="dropdown"><i class="icon fa fa-shopping-bag" aria-hidden="true"></i>@item.Name</a>
                    <ul class="dropdown-menu dropdown-menu-right">
                        <li class="">
                            <div class="row">
                                <div class="col-sm-12 col-md-3">
                                    <ul class="links list-unstyled">
                                        <li>
                                            <ul class="links list-unstyled">
                                                @foreach (var subCategory in item.SubCategories)
                                                {
                                                    <li>
                                                        <a href='@Url.Action("List","Product",new {subcategoryid=subCategory.Id })'>@subCategory.Name</a>
                                                    </li>
                                                }
                                            </ul>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </li>

                    </ul>
                </li>
            }
        </ul>
    </nav>
</div>
