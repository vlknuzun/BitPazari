
@{
    ViewBag.Title = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<BitPazari.Model.Entities.Product> 
<div class="row">
    <div class="col-lg-12">
        @foreach (BitPazari.Model.Entities.Product item in Model)
        {
        <div class="col-lg-4">
            <div class="panel">
                <div class="panel-heading text-danger text-center">
                    <label>@item.Name</label>
                </div>
                <div class="panel-body">
                    <div class="img-responsive">
                        <img src="~/Uploads/@item.ImagePath" alt="Alternate Text" />
                    </div>
                    <div class="btn-group">
                        @Html.ActionLink("Detail", "Detail", "Product", new { id = item.Id }, new { @class = "btn btn-info" }) |     <a href="javascript:void(0)" class="btn btn-warning" onclick="AddToMyCart(@item.Id)">Add To Cart </a>
                    </div>
                </div>
            </div>
        </div>
        }
    </div>
</div>

@section scripts{
    
    <script>
        function AddToMyCart(gid) {
            $.ajax({
                type: "get",
                url: '@Url.Action("Add","Member/Cart")',
                data: { id: gid },
                success: function () {

                }
            })
        }
    </script>
    
    }